{
  "name": "news",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/fe/news/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm dev",
        "cwd": "apps/fe/news"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm preview",
        "cwd": "apps/fe/news"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm build",
        "cwd": "apps/fe/news"
      },
      "configurations": {
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true
      }
    },
    "biome:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check apps/fe/news"
      }
    },
    "biome:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write apps/fe/news"
      }
    }
  },
  "tags": ["type:frontend", "scope:news"]
}
