{
    "name": "auth-service",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/be/auth-service/src",
    "projectType": "application",
    "targets": {
        "serve": {
            "executor": "@nx/js:node",
            "options": {
                "buildTarget": "auth-service:build"
            },
            "configurations": {
                "production": {
                    "buildTarget": "auth-service:build:production"
                }
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd apps/be/auth-service && mvn clean package -DskipTests"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd apps/be/auth-service && mvn test"
            }
        }
    },
    "tags": [
        "type:backend",
        "scope:auth"
    ]
}