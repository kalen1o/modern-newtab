{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "nx-run-newtab:serve",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/apps/fe/newtab"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Local:",
                    "endsPattern": "ready in"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
